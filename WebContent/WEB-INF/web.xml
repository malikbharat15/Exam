<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AuthenticateLogin</servlet-name>
        <servlet-class>com.examination.portal.AuthenticateLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterNewUser</servlet-name>
        <servlet-class>com.examination.portal.RegisterNewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartNewExam</servlet-name>
        <servlet-class>com.examination.portal.StartNewExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RunExam</servlet-name>
        <servlet-class>com.examination.portal.RunExam</servlet-class>
    </servlet>
  

    <servlet>
        <servlet-name>submitExamination</servlet-name>
        <servlet-class>com.examination.portal.submitExamination</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthenticateLogin</servlet-name>
        <url-pattern>/AuthenticateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterNewUser</servlet-name>
        <url-pattern>/RegisterNewUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartNewExam</servlet-name>
        <url-pattern>/StartNewExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RunExam</servlet-name>
        <url-pattern>/RunExam</url-pattern>
    </servlet-mapping>

   
    <servlet-mapping>
        <servlet-name>submitExamination</servlet-name>
        <url-pattern>/submitExamination</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
